doctype html

html
	head
		title Node Boilerplate

		link(href='/global.css?' + version, rel='stylesheet', type='text/css')

		script window.global = {version: "#{version}", debug: !{devMode}}
		if devMode
			script(src="//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.js")
		else
			script(src="//ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
		script(src="/socket.io/socket.io.js")
		script(src='/app.js?' + version)

	body
		h1 Welcome to the Node Boilerplate
		#output
		h2 Chat
		input#txtMessage(placeholder='Message')
		button#btnSend Send
		h3 Received messages:
		#messages
